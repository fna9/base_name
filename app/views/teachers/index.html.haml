%h1 Список преподавателей

%table.table
  %thead
    %tr
      %th Фамилия
      %th Имя
      %th Отчество
      %th Степень
      %th Звание
      %th Должность

  %tbody
    - @teachers.each do |teacher|
      %tr
        %td= link_to 'Показать', teacher
        %td= link_to 'Редактировать', edit_teacher_path(teacher)
        %td= link_to 'Удалить', teacher, :method => :delete, :data => { :confirm => 'Вы уверены?' }

%br

= link_to 'Новый преподватель', new_teacher_path
