%h1 Список групп

%table
  %thead
    %tr
      %th Название
      %th Курс
      %th Семестр

  %tbody
    - @groups.each do |group|
      %tr
        %td= link_to 'Показать', group
        %td= link_to 'Редактировать', edit_group_path(group)
        %td= link_to 'Удалить', group, :method => :delete, :data => { :confirm => 'Вы уверены?' }

%br

= link_to 'Новая группа', new_group_path
