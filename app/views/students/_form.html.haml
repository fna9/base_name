= form_for @student do |f|
  - if @student.errors.any?
    = error_messages_for @student
		

  .row
    .col-md-8
      .form-group
        =f.label :last_name
        =f.text_field(:last_name, class: 'form-control')
        =f.error_messages_for(:last_name)

  .row
    .col-md-8
      .form-group
        =f.label :first_name
        =f.text_field(:first_name, class: 'form-control')
        =f.error_messages_for(:first_name)

  .row
    .col-md-8
      .form-group
        =f.label :second_name
        =f.text_field(:second_name, class: 'form-control')
        =f.error_messages_for(:second_name)

  .row
    .col-md-8
      .form-group
        =f.label :b_date
        .input-group.date.datepicker
          =f.text_field(:b_date, class: 'form-control')
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        =f.error_messages_for(:b_date)

  .row
    .col-md-8
      .form-group
        =f.label :group_id
        =f.text_field(:group_id, class: 'form-control')
        =f.error_messages_for(:group_id)

  .row
    .col-md-8
      .form-group
        =f.label :passport_series
        =f.text_field(:passport_series, class: 'form-control')
        =f.error_messages_for(:passport_series)

  .row
    .col-md-8
      .form-group
        =f.label :password_id
        =f.text_field(:passport_id, class: 'form-control')
        =f.error_messages_for(:passport_id)



  .actions
    = f.submit 'Сохранить'
