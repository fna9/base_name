= form_for @student do |f|
  - if @student.errors.any?
    = error_messages_for @student
		

  .row
    .col-md-8
      .form-group
        =f.label :last_name
        =f.text_field(:last_name, class: 'form-control')
        =f.error_messages_for(:last_name)

  .row
    .col-md-8
      .form-group
        =f.label :first_name
        =f.text_field(:first_name, class: 'form-control')
        =f.error_messages_for(:first_name)

  .row
    .col-md-8
      .form-group
        =f.label :second_name
        =f.text_field(:second_name, class: 'form-control')
        =f.error_messages_for(:second_name)

  .row
    .col-md-8
      .form-group
        =f.label :b_date
        =f.text_field(:b_date, class: 'form-control')
        =f.error_messages_for(:b_date)



  .actions
    = f.submit 'Сохранить'
